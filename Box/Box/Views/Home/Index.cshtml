@model Box.Models.PackagePartViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th scope="col">BOX_ID</th>
						<th scope="col">WEIGHT</th>
						<th scope="col">PART_COUNT</th>
					</tr>
				</thead>
				<tbody>
					@{
						foreach (var package in Model.Packages)
						{
							<tr>
								<td>@package.ID</td>
								<td>@package.Weight</td>
								<td>@package.PartCount</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
		<div class="col-md-6">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th scope="col">BOX_ID</th>
						<th scope="col">PART_NUMBER</th>
						<th scope="col">PART_WEIGHT</th>
						<th scope="col">PART_COST</th>
						<th scope="col">TOTAL_COST</th>
					</tr>
				</thead>
				<tbody>
					@{
						foreach (var package in Model.Packages)
						{
							for (int i = 0; i < package.Parts.Count; i++)
							{
					<tr>
						<td>@package.ID</td>
						<td>@package.Parts[i].PartNumber</td>
						<td>@package.Parts[i].PartWeight</td>
						<td>@package.Parts[i].PartCost</td>
						<td>@package.TotalCost</td>
					</tr>
							}

						}
					}
				</tbody>
			</table>			
		</div>
	</div>
    
</div>
